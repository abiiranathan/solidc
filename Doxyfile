# Project information
PROJECT_NAME           = "solidc"
PROJECT_BRIEF          = "Robust collection of general-purpose cross-platform C libraries and data structures designed for rapid and safe development in C"
PROJECT_VERSION        = "1.0.0"

# Use README.md as main page
USE_MDFILE_AS_MAINPAGE = README.md

# Input/Output - Include both include and src directories
INPUT                  = ./README.md \
                         ./include \
                         ./src
FILE_PATTERNS          = *.h *.c *.md
RECURSIVE              = YES
OUTPUT_DIRECTORY       = ./docs

# Documentation extraction settings
EXTRACT_ALL            = NO
EXTRACT_PRIVATE        = NO
EXTRACT_STATIC         = NO
EXTRACT_LOCAL_CLASSES  = NO
HIDE_UNDOC_MEMBERS     = YES
HIDE_UNDOC_CLASSES     = YES
HIDE_IN_BODY_DOCS      = YES

# Output formats
GENERATE_HTML          = YES
GENERATE_LATEX         = NO
HTML_OUTPUT            = html

# Source browsing
SOURCE_BROWSER         = YES
INLINE_SOURCES         = NO
REFERENCED_BY_RELATION = YES
REFERENCES_RELATION    = YES

# Graphs (requires graphviz)
HAVE_DOT               = YES
CALL_GRAPH             = YES
CALLER_GRAPH           = YES
DOT_IMAGE_FORMAT       = svg
INTERACTIVE_SVG        = YES

# Warnings
WARN_IF_UNDOCUMENTED   = NO
WARN_NO_PARAMDOC       = YES

# Markdown support
MARKDOWN_SUPPORT       = YES
AUTOLINK_SUPPORT       = YES
